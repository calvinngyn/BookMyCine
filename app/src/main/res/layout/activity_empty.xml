<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/myImageView1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/venom"
        app:layout_constraintEnd_toStartOf="@id/myImageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/myImageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/challenger"
        app:layout_constraintStart_toEndOf="@id/myImageView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/myImageView3"
        android:layout_width="200dp"
        android:layout_height="183dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/houseof"
        app:layout_constraintEnd_toStartOf="@id/myImageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myImageView1" />

    <ImageView
        android:id="@+id/myImageView4"
        android:layout_width="200dp"
        android:layout_height="183dp"
        android:layout_marginTop="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/juren2"
        app:layout_constraintStart_toEndOf="@id/myImageView3"
        app:layout_constraintTop_toBottomOf="@id/myImageView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleTextView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/venom_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/myImageView1"
        app:layout_constraintStart_toStartOf="@id/myImageView1"
        app:layout_constraintTop_toBottomOf="@id/myImageView1" />

    <TextView
        android:id="@+id/titleTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/challenger_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/myImageView2"
        app:layout_constraintStart_toStartOf="@id/myImageView2"
        app:layout_constraintTop_toBottomOf="@id/myImageView2" />

    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/houseof_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/myImageView3"
        app:layout_constraintStart_toStartOf="@id/myImageView3"
        app:layout_constraintTop_toBottomOf="@id/myImageView3" />

    <TextView
        android:id="@+id/titleTextView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/juren2_title"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/myImageView4"
        app:layout_constraintStart_toStartOf="@id/myImageView4"
        app:layout_constraintTop_toBottomOf="@id/myImageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>
